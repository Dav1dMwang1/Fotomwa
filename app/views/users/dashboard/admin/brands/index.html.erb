<% unless notice.nil? %>
  <div class="uk-alert-primary" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <h3>Notice</h3>
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<h1>Brands</h1>

<table class="uk-table uk-table-hover uk-table-divider">
  <thead>
  <tr>
    <th>Category</th>
    <th>Brand Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @brands.each do |brand| %>
    <tr>
      <td><%= brand.category.name %></td>
      <td><%= brand.name %></td>
      <td><%= link_to image_tag('common/view.png', size: '20x20'), admin_brand_path(brand), "uk-tooltip":"title: Show Details; delay: 500" %></td>
      <td><%= link_to image_tag('common/edit.png', size: '20x20'), edit_admin_brand_path(brand), "uk-tooltip":"title: Edit Details; delay: 500" %></td>
      <td><%= link_to image_tag('common/delete.png', size: '20x20'), admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?', "uk-tooltip":"title: Delete Brand; delay: 500" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= pagination_links(@brands) %>
<%= link_to "#{image_tag('common/add.png', size: '25x25')}".html_safe, new_admin_brand_path, class: 'uk-link-heading', "uk-tooltip":"title: New Brand; delay: 300" %>

