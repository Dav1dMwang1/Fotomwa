<main class="uk-width-expand uk-position-relative">
  <p id="notice"><%= notice %></p>

  <h1>Brands</h1>

  <table>
    <thead>
    <tr>
      <th>Brand Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', admin_brand_path(brand) %></td>
        <td><%= link_to 'Edit', edit_admin_brand_path(brand) %></td>
        <td><%= link_to 'Delete', admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Brand', new_admin_brand_path %>

</main>