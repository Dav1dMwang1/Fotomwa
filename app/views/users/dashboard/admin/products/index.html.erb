<main class="uk-width-expand uk-position-relative">
  <p id="notice"><%= notice %></p>

  <h1>Products</h1>

  <table>
    <thead>
    <tr>
      <th>Category</th>
      <th>Brand</th>
      <th>Product Name</th>
      <th>Product Unit Price (Ksh)</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.brand.category.name %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.name %></td>
        <td><%= product.unit_price %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_admin_product_path %>

</main>