<% unless notice.nil? %>
  <div class="uk-alert-primary" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <h3>Notice</h3>
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<h1>All Users in the System</h1>

<table class="uk-table uk-table-hover uk-table-divider">
  <thead>
    <tr>
<!--      <th>User Name</th>-->
      <th>User Email</th>
      <th>Phone Number</th>
      <th>User Type</th>
      <th>Paparazzi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
<!--        <td><%#= user.first_name + " " + user.first_name %></td>-->
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.user_role %></td>
        <td><%= user.paparazzi %></td>
<!--        <td><%#= link_to image_tag('common/view.png', size: '25x25'), admin_profile_path(user), "uk-tooltip":"title: Show Profile; delay: 500" %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Admin Profile', admin_profile_path(1) %>