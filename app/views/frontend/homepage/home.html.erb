<!--Main Page-->
<div class="landing page">
  <div id="section_un" class="background one parallax">
    <div class="signpost">
    <span class="foto border">
      FOTOMWA
    </span>
    </div>
  </div>
  <div class="text">
    <h1>Welcome</h1>
    <p>Enjoy a Family friendly taking on making memories.</p>
  </div>
  <div id="section_deux" class="background two parallax"></div>
  <div class="text">
    <h1>Services and Products</h1>
    <p>From Photos to Camera Accessories, Find it all with Us.</p>
    <p>Let us take your Studio Photos and Passports.</p>
  </div>
  <div id="section_trois" class="background four parallax"></div>
  <div class="text">
    <h1>Contact Us</h1>
    <p>Reach us any day of the week.</p>
  </div>

  <!--Login-->
  <div class="login_popup">
    <div id="login" class="modal fade" role="dialog">
      <p id="alert"><%= alert %></p>
      <div class="modal-dialog">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'container'}) do |f| %>
          <h1>Login</h1>
          <%= image_tag('frontend/team.png', class: 'login_logo') %>
          <fieldset>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </fieldset>
          <%= f.submit "Log in" %><br><br><br>
          <div class="social_logos">
<!--            <a href="<%#= omniauth_authorize_path(resource_name, 'google_oauth2') %>"><%#= image_tag('frontend/google.png', size: '30x30', alt: 'Sign In With Google', class: 'fo_logos_google') %></a><br>-->
            <a href="<%= omniauth_authorize_path(resource_name, 'facebook')  %>"><%= image_tag('frontend/facebook.png', size: '30x30', alt: 'Sign In With Facebook', class: 'fo_logos_fb') %></a>
          </div><br>
          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
